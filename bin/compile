#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e           

if [ "$STACK" == "cedar-14" ]; then
  UBUNTU_VERSION="trusty"
elif [ "$STACK" == "heroku-16" ]; then
  UBUNTU_VERSION="xenial"
elif [ "$STACK" == "heroku-18" ]; then
  UBUNTU_VERSION="bionic"
else
  UBUNTU_VERSION="focal"
fi

WKHTMLTOPDF_URL="http://kr.archive.ubuntu.com/ubuntu/pool/universe/w/wkhtmltopdf/wkhtmltopdf_0.12.5-1build1_amd64.deb"

BUILD_DIR=$1
CACHE_DIR=$2

BIN_PATH="$BUILD_DIR/bin/wkhtmltox"
TMP_PATH="$BUILD_DIR/tmp"
LIB_PATH="$BUILD_DIR/vendor/wkhtmltox/lib"

mkdir -p $CACHE_DIR $BIN_PATH $TMP_PATH $LIB_PATH

WKHTMLTOPDF_PKG="$CACHE_DIR/wkhtmltopdf.deb"
WKHTMLTOPDF_PATH="$TMP_PATH/wkhtmltopdf"
WKHTMLTOPDF_BINARIES="$WKHTMLTOPDF_PATH/usr/local/bin"
WKHTMLTOPDF_LIBS="$WKHTMLTOPDF_PATH/usr/local/lib"

BIN_DIR=$(cd $(dirname $0); pwd)
FONTS_DIR=$(cd "$BIN_DIR/../fonts"; pwd)

echo "-----> Downloading wkhtmltopdf & wkhtmltoimage Debian package from ${WKHTMLTOPDF_URL}"
curl -L $WKHTMLTOPDF_URL -o $WKHTMLTOPDF_PKG

echo "-----> Unpacking wkhtmltopdf & wkhtmltoimage Debian package"
dpkg -x $WKHTMLTOPDF_PKG $WKHTMLTOPDF_PATH

echo "-----> Setting permissions for wkhtmltopdf & wkhtmltoimage binaries"
chmod +x $WKHTMLTOPDF_BINARIES/*

echo "-----> Moving wkhtmltopdf & wkhtmltoimage binaries to ${BIN_PATH}"
mv $WKHTMLTOPDF_BINARIES/* $BIN_PATH/

echo "-----> Moving wkhtmltopdf & wkhtmltoimage libs to ${LIB_PATH}"
mv $WKHTMLTOPDF_LIBS/* $LIB_PATH/

echo "-----> Cleaning up"
rm -rf $WKHTMLTOPDF_PATH

#echo "-----> Installing fonts"
#mkdir -p $1/.fonts
#ls $FONTS_DIR
#cp -r $FONTS_DIR/* $1/.fonts/
#fc-cache -f $1/.fonts